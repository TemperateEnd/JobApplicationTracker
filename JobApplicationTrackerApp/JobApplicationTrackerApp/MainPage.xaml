<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobApplicationTrackerApp.MainPage"
             Title="Applications"
             Shell.NavBarIsVisible="True">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddClicked" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="ApplicationsCollection" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
        <CollectionView.Header>
            <Border StrokeThickness="0" BackgroundColor="Red" Padding="0">
                <!-- Table header -->
                <Grid ColumnDefinitions="*,*,*,*"
                        Padding="5"
                        BackgroundColor="#eeeeee">
                    <Label Text="Company Name" Grid.Column="0" TextColor="Black"/>
                    <Label Text="Position" Grid.Column="1"  TextColor="Black"/>
                    <Label Text="Application Date" Grid.Column="2"  TextColor="Black"/>
                    <Label Text="Application Status" Grid.Column="3" TextColor="Black"/>
                </Grid>
            </Border>
        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!-- One row per item -->
                <Grid ColumnDefinitions="*,*,*,*"
                          Padding="5"
                          RowSpacing="0">
                    <Label Text="{Binding CompanyName}" Grid.Column="0" FontSize="14"/>
                    <Label Text="{Binding Position}" Grid.Column="1" FontSize="14"/>
                    <Label Text="{Binding ApplicationDate}" Grid.Column="2" FontSize="14"/>
                    <Label Text="{Binding JobAppStatus }" Grid.Column="3" FontSize="14"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
