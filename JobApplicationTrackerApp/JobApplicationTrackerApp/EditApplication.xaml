<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobApplicationTrackerApp.EditApplication"
             Title="EditApplication">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry x:Name="CompanyEntry" Placeholder="Company Name" />
        <Entry x:Name="PositionEntry" Placeholder="Position" />
        <DatePicker x:Name="DateAppliedPicker" />
        <Picker x:Name="StatusPicker" Title="Status" />
        <Button Text="Save" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>